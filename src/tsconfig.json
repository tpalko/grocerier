{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "removeComments": false,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowJs": true,
    "lib": [
      "dom",
      "es2016",
      "es2017.object"
    ],
    "typeRoots": [
      "../node_modules/@types",
      "./@types"
    ]
  }
}